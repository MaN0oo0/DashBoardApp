 @model DepartmentVM
@{
    ViewData["Title"] = @SharedLocalizer["Details"];
}

<div >
    <h2 class="badge rounded-pill bg-secondary p-2 mt-2" >@SharedLocalizer["DFD"] @Model.Name </h2>
</div>



 <div class="form-group">
    <label asp-for="Name">@SharedLocalizer["Name"]</label>
    <input type="text" class="form-control" asp-for="Name" autocomplete="off" readonly >
  </div>
  <div class="form-group">
    <label asp-for="Code">@SharedLocalizer["DC"]</label>
    <input type="text" class="form-control" asp-for="Code" autocomplete="off" readonly>
  </div>
  <center >
                  <a asp-action="index" asp-controller="Department" class="btn btn-primary">@SharedLocalizer["Return"]</a>
                  <a asp-action="Update" asp-controller="Department" asp-route-id="@Model.Id" class="btn btn-warning">@SharedLocalizer["Update"]</a>
                  <a asp-action="Delete" asp-controller="Department" asp-route-id="@Model.Id" class="btn btn-danger">@SharedLocalizer["Delete"]</a>

  </center>