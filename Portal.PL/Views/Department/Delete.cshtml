@model DepartmentVM
@{
    ViewData["Title"] = "Delete";
}

<div class="block-header">
    <h2 >Delete: @Model.Name </h2>
</div>

<form asp-controller="Department" asp-action="Delete"  class="form-group">
    <input type="hidden" asp-for="Id" />
  <div class="form-group">
    <label asp-for="Name">DepartName:</label>
    <input type="text" class="form-control" asp-for="Name" autocomplete="off" readonly >
  </div>

  <div class="form-group">
    <label asp-for="Code">Code:</label>
    <input type="text" class="form-control" asp-for="Code" autocomplete="off" readonly>
  </div>
 <center>
      

  <button type="submit" class="btn btn-danger">Delete</button>
      <a asp-action="index" asp-controller="Department" class="btn btn-primary">Return</a> </center>
</form>

