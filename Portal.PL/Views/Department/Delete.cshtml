@model DepartmentVM
@{
    ViewData["Title"] = @SharedLocalizer["Delete"];
}

<div >
    <h2 class="badge rounded-pill bg-secondary p-2 mt-2" > @SharedLocalizer["Delete"]: @Model.Name </h2>
</div>

<form asp-controller="Department" asp-action="Delete"  class="form-group">
    <input type="hidden" asp-for="Id" />
  <div class="form-group">
    <label asp-for="Name"> @SharedLocalizer["Name"]</label>
    <input type="text" class="form-control" asp-for="Name" autocomplete="off" readonly >
  </div>

  <div class="form-group">
    <label asp-for="Code"> @SharedLocalizer["DC"]</label>
    <input type="text" class="form-control" asp-for="Code" autocomplete="off" readonly>
  </div>
 <center>
      

  <button type="submit" class="btn btn-danger"> @SharedLocalizer["Delete"]</button>
      <a asp-action="index" asp-controller="Department" class="btn btn-primary"> @SharedLocalizer["Return"]</a> </center>
</form>

