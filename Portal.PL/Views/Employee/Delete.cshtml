@model EmployeeVM
@{
    ViewData["Title"] =  @SharedLocalizer["Delete"];
}
@section Styles{
      <link href="~/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
}


<div >
   <h2 class="badge rounded-pill bg-secondary p-2 mt-2"> @SharedLocalizer["AreyousuretoDelete"] : @Model.Name  </h2>
</div>



<form asp-controller="Employee" asp-action="Delete" class="form-group">



    <input type="hidden" asp-for="Id" />

    @{await Html.RenderPartialAsync("~/Views/Partials/Employee/DeleteDetails.cshtml");}



    <center class="mt-5 p-5" style="margin:60px auto">
        <input type="submit" value=" @SharedLocalizer["Delete"]" class="btn btn-danger" />
            <a asp-controller="Employee" asp-action="Index" class="btn btn-primary"> @SharedLocalizer["Return"]</a>
       
    </center>

</form>

