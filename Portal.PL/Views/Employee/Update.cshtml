@model EmployeeVM
@inject IDistric distric
@{
    ViewData["Title"] = "Update";
}
@section Styles{
      <link href="~/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
}


<div class="block-header">
   <h2>Update : @Model.Name </h2>
</div>



<form asp-controller="Employee" asp-action="Update" class="form-group">


    <div asp-validation-summary="All" class="text-danger font-bold"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CreationDate" />


    @{await Html.RenderPartialAsync("~/Views/Partials/Employee/CreateEdit.cshtml");}

    <label  >DistricName</label>
    <select class="form-control" asp-for="DistricId">
        <option>Choose Distric</option>
         @foreach (var item in await distric.GetAsync())
         {
        <option value="@item.Id">@item.Name</option>     
         }
    </select>

    <center style="margin:60px auto">
        <input type="submit" value="Update" class="btn btn-success" />
        <input type="reset" value="Cancle" class="btn btn-danger" />
        <a  asp-controller="Employee" asp-action="index" class="btn btn-primary" >Return</a>
    </center>

</form>
@section Valdiation{
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

