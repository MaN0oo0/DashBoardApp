@model IdentityRole
@{
    ViewData["Title"] = "Create";
}

<form asp-controller="Roles" asp-action="Create" class="form-group" enctype="multipart/form-data">

    <div asp-validation-summary="All"></div>
    <label asp-for="Name">@SharedLocalizer["Name"]</label>
    <input type="text" class="form-control" asp-for="Name"required />
    <span asp-validation-for="Name" class="text-danger font-bold"></span>
    <br />
    <center>

        <button type="submit" class="btn btn-success">@SharedLocalizer["Save"]</button>

        <a asp-action="index" asp-controller="Roles" class="btn btn-primary">@SharedLocalizer["Return"]</a>

    </center>
</form>
@section Valdiation{
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}